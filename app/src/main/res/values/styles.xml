<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== TOOLBAR STYLES ==================== -->

    <style name="SafeGuard.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background_primary</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="navigationIconTint">@color/icon_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/SafeGuard.TextAppearance.TitleLarge</item>
    </style>

    <style name="SafeGuard.Toolbar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.SafeGuard.Toolbar.Light" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextAppearance.SafeGuard.Headline6" parent="SafeGuard.TextAppearance.TitleLarge" />

    <!-- ==================== BUTTON STYLES ==================== -->

    <!-- Base SafeGuard Button -->
    <style name="SafeGuard.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAppearance">@style/SafeGuard.TextAppearance.LabelLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/button_primary_text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing_xs</item>
    </style>

    <style name="SafeGuard.Button.Large" parent="SafeGuard.Button">
        <item name="android:minHeight">@dimen/button_height_large</item>
    </style>

    <!-- Widget.SafeGuard Mapping Styles -->
    <style name="Widget.SafeGuard" parent="" />
    <style name="Widget.SafeGuard.Button.Primary" parent="SafeGuard.Button" />
    <style name="Widget.SafeGuard.Button.Large" parent="SafeGuard.Button.Large" />

    <style name="Widget.SafeGuard.Button.Primary.Danger" parent="SafeGuard.Button">
        <item name="backgroundTint">@color/button_danger</item>
    </style>

    <style name="Widget.SafeGuard.Button.Success" parent="SafeGuard.Button">
        <item name="backgroundTint">@color/status_success</item>
    </style>

    <style name="SafeGuard.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/accent_primary</item>
        <item name="strokeColor">@color/accent_primary</item>
        <item name="strokeWidth">@dimen/border_width_medium</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="android:textAppearance">@style/SafeGuard.TextAppearance.LabelLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="Widget.SafeGuard.Button.Outlined" parent="SafeGuard.Button.Outlined" />

    <style name="Widget.SafeGuard.Button.Outlined.Danger" parent="Widget.SafeGuard.Button.Outlined">
        <item name="android:textColor">@color/status_error</item>
        <item name="strokeColor">@color/status_error</item>
    </style>

    <style name="Widget.SafeGuard.Button.Outlined.Light" parent="Widget.SafeGuard.Button.Outlined">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="SafeGuard.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/accent_primary</item>
        <item name="android:textAppearance">@style/SafeGuard.TextAppearance.LabelLarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.SafeGuard.Button.Text" parent="SafeGuard.Button.Text" />

    <!-- ==================== TEXT INPUT STYLES ==================== -->

    <style name="SafeGuard.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxStrokeWidth">@dimen/border_width_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_radius</item>
    </style>

    <style name="Widget.SafeGuard.TextInputLayout" parent="SafeGuard.TextInputLayout" />

    <style name="Widget.SafeGuard.TextInputLayout.Dark" parent="Widget.SafeGuard.TextInputLayout">
        <item name="boxBackgroundColor">@color/background_primary</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_alpha_60</item>
    </style>

    <!-- ==================== CARD STYLES ==================== -->

    <style name="SafeGuard.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- ==================== BOTTOM NAVIGATION STYLES ==================== -->

    <style name="SafeGuard.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/background_primary</item>
        <item name="itemIconTint">@color/nav_unselected</item>
        <item name="itemTextColor">@color/nav_unselected</item>
        <item name="itemRippleColor">@color/ripple_accent</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.SafeGuard.BottomNavActiveIndicator</item>
    </style>

    <style name="SafeGuard.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/surface_primary</item>
        <item name="shapeAppearance">@style/SafeGuard.ShapeAppearance.LargeComponent</item>
    </style>

    <!-- ==================== CHIP STYLES ==================== -->

    <style name="Widget.SafeGuard.Chip.Emergency" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/status_error_background</item>
        <item name="android:textColor">@color/status_error</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="Widget.SafeGuard.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_secondary</item>
    </style>

    <style name="Widget.SafeGuard.Chip.Sort" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/surface_secondary</item>
    </style>

    <!-- ==================== OTHER WIDGETS ==================== -->

    <style name="Widget.SafeGuard.OtpEditText">
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="OtpEditText" parent="Widget.SafeGuard.OtpEditText" />

    <style name="Widget.SafeGuard.BottomNavActiveIndicator" parent="">
        <item name="android:color">@color/accent_cyan_alpha_20</item>
    </style>

    <style name="SafeGuard.CircularProgress.Small" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">@dimen/circular_progress_size_small</item>
        <item name="trackThickness">2dp</item>
    </style>

    <!-- ==================== SHAPE APPEARANCES ==================== -->

    <style name="SafeGuard.ShapeAppearance.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/radius_sm</item>
    </style>

    <style name="SafeGuard.ShapeAppearance.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">@dimen/radius_md</item>
    </style>

    <style name="SafeGuard.ShapeAppearance.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">@dimen/radius_lg</item>
    </style>

    <!-- ==================== TEXT APPEARANCES ==================== -->

    <!-- Display -->
    <style name="SafeGuard.TextAppearance.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">@dimen/text_display_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">@dimen/text_display_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">@dimen/text_display_small</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Headline -->
    <style name="SafeGuard.TextAppearance.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">@dimen/text_headline_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">@dimen/text_headline_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/space_grotesk_medium</item>
        <item name="android:textSize">@dimen/text_headline_small</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Title -->
    <style name="SafeGuard.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_title_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_title_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_title_small</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Body -->
    <style name="SafeGuard.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="SafeGuard.TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Label -->
    <style name="SafeGuard.TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_label_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SafeGuard.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_label_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="SafeGuard.TextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_label_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="SafeGuard.TextAppearance.Link" parent="SafeGuard.TextAppearance.BodyMedium">
        <item name="android:textColor">@color/accent_primary</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Bottom Navigation Text -->
    <style name="TextAppearance.SafeGuard.BottomNavActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

    <style name="TextAppearance.SafeGuard.BottomNavInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

</resources>