<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== BASE APPLICATION THEME ==================== -->

    <style name="Theme.SafeGuardSOS" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_primary_dark</item>
        <item name="colorPrimaryContainer">@color/surface_tertiary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_secondary</item>
        <item name="colorSecondaryVariant">@color/accent_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/surface_secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/sos_primary</item>
        <item name="colorTertiaryContainer">@color/sos_background</item>
        <item name="colorOnTertiary">@color/text_on_sos</item>
        <item name="colorOnTertiaryContainer">@color/sos_primary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorSurfaceVariant">@color/surface_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/status_error</item>
        <item name="colorErrorContainer">@color/status_error_background</item>
        <item name="colorOnError">@color/text_primary</item>
        <item name="colorOnErrorContainer">@color/status_error</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/border</item>
        <item name="colorOutlineVariant">@color/border_light</item>

        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Window Configuration -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Default Widget Styles -->
        <item name="buttonStyle">@style/SafeGuard.Button</item>
        <item name="materialButtonStyle">@style/SafeGuard.Button</item>
        <item name="textInputStyle">@style/SafeGuard.TextInputLayout</item>
        <item name="cardViewStyle">@style/SafeGuard.CardView</item>
        <item name="bottomNavigationStyle">@style/SafeGuard.BottomNavigation</item>
        <item name="toolbarStyle">@style/SafeGuard.Toolbar</item>

        <!-- Text Appearances -->
        <item name="textAppearanceDisplayLarge">@style/SafeGuard.TextAppearance.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/SafeGuard.TextAppearance.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/SafeGuard.TextAppearance.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/SafeGuard.TextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/SafeGuard.TextAppearance.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/SafeGuard.TextAppearance.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/SafeGuard.TextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/SafeGuard.TextAppearance.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/SafeGuard.TextAppearance.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/SafeGuard.TextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/SafeGuard.TextAppearance.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/SafeGuard.TextAppearance.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/SafeGuard.TextAppearance.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/SafeGuard.TextAppearance.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/SafeGuard.TextAppearance.LabelSmall</item>

        <!-- Shape Appearances -->
        <item name="shapeAppearanceSmallComponent">@style/SafeGuard.ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/SafeGuard.ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/SafeGuard.ShapeAppearance.LargeComponent</item>
    </style>

    <!-- ==================== SPLASH THEME ==================== -->

    <style name="Theme.SafeGuardSOS.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SafeGuardSOS</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_background</item>
    </style>

    <!-- ==================== FULLSCREEN THEME ==================== -->

    <style name="Theme.SafeGuardSOS.Fullscreen" parent="Theme.SafeGuardSOS">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ==================== TRANSPARENT THEME ==================== -->

    <style name="Theme.SafeGuardSOS.Transparent" parent="Theme.SafeGuardSOS">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- ==================== DIALOG THEME ==================== -->

    <style name="Theme.SafeGuardSOS.Dialog" parent="Theme.Material3.Dark.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="colorSurface">@color/surface_primary</item>
    </style>

    <style name="SafeGuard_Dialog" parent="Theme.SafeGuardSOS.Dialog" />

    <!-- ==================== BOTTOM SHEET THEME ==================== -->

    <style name="Theme.SafeGuardSOS.BottomSheet" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SafeGuard.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>