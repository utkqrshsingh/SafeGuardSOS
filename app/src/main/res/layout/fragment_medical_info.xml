<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/text_primary"
            app:title="Medical Information"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.SafeGuard.Headline6" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/info_background"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="This information will be shared with helpers during emergencies to provide better assistance."
                        android:textColor="@color/info"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blood Group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textColor="@color/accent"
                android:textSize="@dimen/text_size_subtitle2"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutBloodGroup"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:hint="Blood Group"
                app:startIconDrawable="@drawable/ic_blood"
                app:startIconTint="@color/emergency"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/autoCompleteBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Allergies Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_sm">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Allergies"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body1"
                    android:fontFamily="@font/inter_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddAllergy"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add"
                    android:textColor="@color/accent"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/textNoAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No allergies added"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_caption"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Medications Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_sm">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Medications"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body1"
                    android:fontFamily="@font/inter_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddMedication"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add"
                    android:textColor="@color/accent"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/textNoMedications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No medications added"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_caption"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Medical Conditions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_sm">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Medical Conditions"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body1"
                    android:fontFamily="@font/inter_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddCondition"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add"
                    android:textColor="@color/accent"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/textNoConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No conditions added"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_caption"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Emergency Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmergencyNotes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:hint="Emergency Notes (Optional)"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary"
                app:counterEnabled="true"
                app:counterMaxLength="500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmergencyNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLength="500"
                    android:gravity="top" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Organ Donor Switch -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/emergency" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organ Donor"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body1"
                            android:fontFamily="@font/inter_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I am registered as an organ donor"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_caption" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchOrganDonor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Insurance Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Insurance Information (Optional)"
                android:textColor="@color/accent"
                android:textSize="@dimen/text_size_subtitle2"
                android:fontFamily="@font/inter_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutInsuranceProvider"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:hint="Insurance Provider"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextInsuranceProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPolicyNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:hint="Policy Number"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPolicyNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Primary Physician -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Primary Physician (Optional)"
                android:textColor="@color/accent"
                android:textSize="@dimen/text_size_subtitle2"
                android:fontFamily="@font/inter_semibold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPhysicianName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:hint="Physician Name"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/text_secondary"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhysicianName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPhysicianPhone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:hint="Physician Phone"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/text_secondary"
                app:boxStrokeColor="@color/input_stroke_color"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhysicianPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_lg">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:text="Cancel"
                    android:textColor="@color/text_secondary"
                    app:strokeColor="@color/stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/accent" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/accent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>