<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_md"
    app:cardElevation="@dimen/elevation_sm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Helper Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/success"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvInitials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/space_grotesk_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_lg"
                tools:text="JD" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Verified Badge -->
        <ImageView
            android:id="@+id/ivVerified"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_verified"
            app:layout_constraintBottom_toBottomOf="@id/cardAvatar"
            app:layout_constraintEnd_toEndOf="@id/cardAvatar"
            app:tint="@color/info" />

        <!-- Helper Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_md"
            app:layout_constraintEnd_toStartOf="@id/actionsContainer"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toTopOf="@id/cardAvatar"
            tools:text="John Doe" />

        <!-- Distance & Status -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/actionsContainer"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvName">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location"
                app:tint="@color/text_hint" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_sm"
                tools:text="1.2 km away" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="@dimen/spacing_sm"
                android:background="@drawable/bg_dot" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/success"
                android:textSize="@dimen/text_sm"
                tools:text="On the way" />

        </LinearLayout>

        <!-- ETA Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            app:cardBackgroundColor="@color/success_alpha_10"
            app:cardCornerRadius="@dimen/radius_sm"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/cardAvatar"
            app:layout_constraintTop_toBottomOf="@id/infoContainer">

            <TextView
                android:id="@+id/tvEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:textColor="@color/success"
                android:textSize="@dimen/text_xs"
                tools:text="ETA: 3 min" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Container -->
        <LinearLayout
            android:id="@+id/actionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnMessage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_icon"
                android:contentDescription="@string/message"
                android:src="@drawable/ic_sms"
                app:tint="@color/info" />

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/spacing_sm"
                android:background="@drawable/bg_button_icon_success"
                android:contentDescription="@string/call"
                android:src="@drawable/ic_phone"
                app:tint="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>