<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_xl">

            <!-- Header -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_margin="@dimen/spacing_lg"
                android:background="@drawable/bg_button_icon"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space_grotesk_bold"
                android:gravity="center"
                android:text="@string/alert_details"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_headline_small"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <!-- Responding Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/respondingBanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:cardBackgroundColor="@color/status_success"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_navigation"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/you_are_responding"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_label_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Arrived Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/arrivedBanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:cardBackgroundColor="@color/status_info"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/you_have_arrived"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_label_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- User Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/respondingBanner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_md">

                    <!-- Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAvatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="@color/primary_red"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvUserInitials"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_headline_small"
                            tools:text="JD" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:fontFamily="@font/space_grotesk_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_title_medium"
                        app:layout_constraintEnd_toStartOf="@id/btnCall"
                        app:layout_constraintStart_toEndOf="@id/cardAvatar"
                        app:layout_constraintTop_toTopOf="@id/cardAvatar"
                        tools:text="John Doe" />

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toStartOf="@id/btnCall"
                        app:layout_constraintStart_toEndOf="@id/cardAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvUserName">

                        <View
                            android:id="@+id/statusDot"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_pulse_dot" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/error"
                            android:textSize="@dimen/text_label_medium"
                            tools:text="Needs Help" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginHorizontal="@dimen/spacing_sm"
                            android:background="@drawable/bg_dot" />

                        <TextView
                            android:id="@+id/tvTimeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/text_hint"
                            android:textSize="@dimen/text_label_medium"
                            tools:text="5 min ago" />

                    </LinearLayout>

                    <!-- Call Button -->
                    <ImageButton
                        android:id="@+id/btnCall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:background="@drawable/bg_button_icon_success"
                        android:contentDescription="@string/call"
                        android:src="@drawable/ic_phone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnMessage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                    <!-- Message Button -->
                    <ImageButton
                        android:id="@+id/btnMessage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_button_icon"
                        android:contentDescription="@string/message"
                        android:src="@drawable/ic_sms"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/status_info" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Type & Distance -->
            <LinearLayout
                android:id="@+id/typeDistanceContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardUser">

                <!-- Emergency Type Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEmergencyType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/error_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/ivEmergencyIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_warning"
                            app:tint="@color/error" />

                        <TextView
                            android:id="@+id/tvEmergencyType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/error"
                            android:textSize="@dimen/text_label_large"
                            tools:text="Safety" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Distance Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/accent_cyan_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/accent_cyan" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/accent_cyan"
                            android:textSize="@dimen/text_label_large"
                            tools:text="1.2 km" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Message Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typeDistanceContainer"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/message"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_label_small" />

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_medium"
                        tools:text="Please help, I'm feeling unsafe." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Map Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMap"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardMessage"
                app:rippleColor="@color/ripple_light">

                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Expand Overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="@dimen/spacing_sm"
                        android:background="@drawable/bg_button_icon"
                        android:padding="@dimen/spacing_xs"
                        android:src="@drawable/ic_open_external"
                        app:tint="@color/text_primary" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Address -->
            <LinearLayout
                android:id="@+id/addressContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardMap">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="2"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label_medium"
                    tools:text="123 Main Street, City Name, Country" />

            </LinearLayout>

            <!-- Other Responders Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOtherResponders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:cardBackgroundColor="@color/info_alpha_10"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressContainer"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_helper"
                        app:tint="@color/status_info" />

                    <TextView
                        android:id="@+id/tvRespondersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/status_info"
                        android:textSize="@dimen/text_label_medium"
                        tools:text="2 other helpers responding" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer -->
            <Space
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/buttonsContainer"
                app:layout_constraintTop_toBottomOf="@id/cardOtherResponders"
                app:layout_constraintVertical_weight="1" />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_xl"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardOtherResponders"
                app:layout_constraintVertical_bias="1">

                <!-- Respond Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRespond"
                    style="@style/Widget.SafeGuard.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:text="@string/respond_to_alert"
                    app:icon="@drawable/ic_navigation"
                    app:iconGravity="textStart" />

                <!-- Navigate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNavigate"
                    style="@style/Widget.SafeGuard.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:text="@string/navigate_to_location"
                    android:visibility="gone"
                    app:icon="@drawable/ic_navigation"
                    app:iconGravity="textStart"
                    tools:visibility="gone" />

                <!-- Arrived Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnArrived"
                    style="@style/Widget.SafeGuard.Button.Success"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/i_have_arrived"
                    android:visibility="gone"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    tools:visibility="gone" />

                <!-- Cancel Response -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelResponse"
                    style="@style/Widget.SafeGuard.Button.Outlined.Danger"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/cancel_response"
                    android:visibility="gone"
                    tools:visibility="gone" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading -->
    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/accent" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>