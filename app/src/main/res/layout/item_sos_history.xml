<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_md"
    app:cardElevation="@dimen/elevation_sm"
    app:rippleColor="@color/ripple_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Emergency Type Icon -->
        <ImageView
            android:id="@+id/ivType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_circle_red"
            android:padding="@dimen/spacing_sm"
            android:src="@drawable/ic_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_red" />

        <!-- Emergency Type -->
        <TextView
            android:id="@+id/tvEmergencyType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_md"
            app:layout_constraintEnd_toStartOf="@id/cardStatus"
            app:layout_constraintStart_toEndOf="@id/ivType"
            app:layout_constraintTop_toTopOf="@id/ivType"
            tools:text="Safety Emergency" />

        <!-- Date & Time -->
        <LinearLayout
            android:id="@+id/dateTimeContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/cardStatus"
            app:layout_constraintStart_toEndOf="@id/ivType"
            app:layout_constraintTop_toBottomOf="@id/tvEmergencyType">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_sm"
                tools:text="Jan 15, 2024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                android:text="â€¢"
                android:textColor="@color/text_hint" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_sm"
                tools:text="03:45 PM" />

        </LinearLayout>

        <!-- Status Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/success_alpha_10"
            app:cardCornerRadius="@dimen/radius_sm"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:textColor="@color/success"
                android:textSize="@dimen/text_xs"
                tools:text="Resolved" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTint="@color/text_hint"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_xs"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivType"
            tools:text="123 Main Street, City Name"
            tools:visibility="visible" />

        <!-- Footer Info -->
        <LinearLayout
            android:id="@+id/footerContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLocation">

            <TextView
                android:id="@+id/tvHelpers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_helper"
                android:drawablePadding="@dimen/spacing_xs"
                android:drawableTint="@color/success"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_xs"
                android:visibility="gone"
                tools:text="2 helpers responded"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="@dimen/spacing_xs"
                android:drawableTint="@color/text_hint"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_xs"
                android:visibility="gone"
                tools:text="15 min"
                tools:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/text_hint" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>