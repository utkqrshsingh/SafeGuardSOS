<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Map Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Top Toolbar Overlay -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_gradient_toolbar"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            app:title="@string/navigation"
            app:titleTextAppearance="@style/TextAppearance.SafeGuard.Toolbar.Light"
            app:titleTextColor="@color/white" />

        <!-- FAB Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/spacing_md"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRecenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/recenter"
                android:src="@drawable/ic_my_location"
                app:backgroundTint="@color/surface"
                app:fabSize="mini"
                app:tint="@color/text_primary" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTraffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:contentDescription="@string/traffic"
                android:src="@drawable/ic_traffic_off"
                app:backgroundTint="@color/surface"
                app:fabSize="mini"
                app:tint="@color/text_primary" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Sheet -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_xl"
            app:cardElevation="@dimen/elevation_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Handle -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_sheet_handle" />

                <!-- Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/info_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/statusIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/bg_pulse_dot"
                            app:tint="@color/info" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/navigating"
                            android:textColor="@color/info"
                            android:textSize="@dimen/text_md" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="@color/primary_red"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_sos"
                            app:tint="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_lg"
                            tools:text="John Doe" />

                        <TextView
                            android:id="@+id/tvEmergencyType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_sm"
                            tools:text="Safety Emergency" />

                    </LinearLayout>

                    <!-- Quick Actions -->
                    <ImageButton
                        android:id="@+id/btnCallUser"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_button_icon_success"
                        android:contentDescription="@string/call"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/btnMessageUser"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:background="@drawable/bg_button_icon"
                        android:contentDescription="@string/message"
                        android:src="@drawable/ic_sms"
                        app:tint="@color/info" />

                </LinearLayout>

                <!-- Distance and ETA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal">

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:textColor="@color/accent_cyan"
                            android:textSize="@dimen/text_2xl"
                            tools:text="2.5 km" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/distance"
                            android:textColor="@color/text_hint"
                            android:textSize="@dimen/text_sm" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/divider" />

                    <!-- ETA -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:textColor="@color/success"
                            android:textSize="@dimen/text_2xl"
                            tools:text="5 min" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/eta"
                            android:textColor="@color/text_hint"
                            android:textSize="@dimen/text_sm" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenMaps"
                        style="@style/Widget.SafeGuard.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_lg"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/open_google_maps"
                        app:icon="@drawable/ic_navigation"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMarkArrived"
                        style="@style/Widget.SafeGuard.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_lg"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/i_arrived"
                        app:backgroundTint="@color/success"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelResponse"
                    style="@style/Widget.SafeGuard.Button.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/cancel_response"
                    android:textColor="@color/error" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_overlay"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/accent_cyan" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>