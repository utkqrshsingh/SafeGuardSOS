<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_emergency">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Header -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:background="@drawable/bg_button_icon_dark"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space_grotesk_bold"
                android:gravity="center"
                android:text="@string/emergency_sos"
                android:textColor="@color/white"
                android:textSize="@dimen/text_headline_small"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <!-- Active Alert Warning -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActiveWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="gone"
                app:cardBackgroundColor="@color/status_warning"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/on_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/active_alert_warning"
                        android:textColor="@color/on_warning"
                        android:textSize="@dimen/text_label_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Permission Warning -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPermissionWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:cardBackgroundColor="@color/error_alpha_10"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardActiveWarning"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/location_permission_required"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_label_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SOS Button Container -->
            <FrameLayout
                android:id="@+id/sosButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPermissionWarning">

                <!-- Pulse Rings -->
                <View
                    android:id="@+id/pulseRing3"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:alpha="0.2"
                    android:background="@drawable/bg_sos_pulse_ring_white" />

                <View
                    android:id="@+id/pulseRing2"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@drawable/bg_sos_pulse_ring_white" />

                <View
                    android:id="@+id/pulseRing1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:alpha="0.4"
                    android:background="@drawable/bg_sos_pulse_ring_white" />

                <!-- Main SOS Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnSOS"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:longClickable="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="@dimen/elevation_xl"
                    app:rippleColor="@color/primary_red_alpha_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_sos"
                            app:tint="@color/primary_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="@font/space_grotesk_bold"
                            android:text="@string/hold"
                            android:textColor="@color/primary_red"
                            android:textSize="@dimen/text_title_large" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <TextView
                android:id="@+id/tvSOSInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:fontFamily="@font/inter_medium"
                android:text="@string/hold_to_trigger_sos"
                android:textColor="@color/white_alpha_80"
                android:textSize="@dimen/text_title_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sosButtonContainer" />

            <!-- Status Cards -->
            <LinearLayout
                android:id="@+id/statusCardsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSOSInstruction">

                <!-- Location Status -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/ivLocationStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/status_success" />

                        <TextView
                            android:id="@+id/tvLocationStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/location_acquired"
                            android:textColor="@color/status_success"
                            android:textSize="@dimen/text_label_small" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Contacts -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_contacts"
                            app:tint="@color/accent_cyan" />

                        <TextView
                            android:id="@+id/tvContactsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_label_small"
                            tools:text="3 contacts" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Helpers -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_alpha_10"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_helper"
                            app:tint="@color/status_success" />

                        <TextView
                            android:id="@+id/tvHelpersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_label_small"
                            tools:text="12 helpers" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Emergency Type Selection -->
            <TextView
                android:id="@+id/tvEmergencyTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/emergency_type"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusCardsContainer" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupEmergency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                app:chipSpacingHorizontal="@dimen/spacing_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmergencyTypeLabel"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmergencyMedical"
                    style="@style/Widget.SafeGuard.Chip.Emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medical"
                    app:chipIcon="@drawable/ic_medical" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmergencySafety"
                    style="@style/Widget.SafeGuard.Chip.Emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safety"
                    app:chipIcon="@drawable/ic_shield" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmergencyAccident"
                    style="@style/Widget.SafeGuard.Chip.Emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accident"
                    app:chipIcon="@drawable/ic_warning" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmergencyOther"
                    style="@style/Widget.SafeGuard.Chip.Emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    app:chipIcon="@drawable/ic_home" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Options Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white_alpha_10"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chipGroupEmergency">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Silent Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_home"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_md"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/silent_mode"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_body_large" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/silent_mode_desc"
                                android:textColor="@color/white_alpha_60"
                                android:textSize="@dimen/text_label_small" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSilentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:trackTint="@color/switch_track_color_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/spacing_md"
                        android:background="@color/white_alpha_10" />

                    <!-- Contacts Only -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_contacts"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_md"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/contacts_only"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_body_large" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/contacts_only_desc"
                                android:textColor="@color/white_alpha_60"
                                android:textSize="@dimen/text_label_small" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchContactsOnly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:trackTint="@color/switch_track_color_light" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Message -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMessage"
                style="@style/Widget.SafeGuard.TextInputLayout.Dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:hint="@string/additional_message_hint"
                app:boxStrokeColor="@color/white_alpha_40"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:hintTextColor="@color/white_alpha_60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardOptions">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdditionalMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="textMultiLine"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body_large" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Manage Contacts Link -->
            <TextView
                android:id="@+id/tvManageContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/spacing_sm"
                android:text="@string/manage_emergency_contacts"
                android:textColor="@color/accent_cyan"
                android:textSize="@dimen/text_label_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilMessage" />

            <!-- Test SOS Button (Debug) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestSOS"
                style="@style/Widget.SafeGuard.Button.Outlined.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/send_test_alert"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvManageContacts"
                tools:visibility="visible" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>