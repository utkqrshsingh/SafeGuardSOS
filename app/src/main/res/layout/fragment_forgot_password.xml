<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:background="@drawable/bg_button_icon"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_primary" />

            <!-- Lock Icon -->
            <ImageView
                android:id="@+id/ivLock"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:background="@drawable/bg_circle_accent"
                android:padding="@dimen/spacing_lg"
                android:src="@drawable/ic_lock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:tint="@color/accent_cyan" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:fontFamily="@font/space_grotesk_bold"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_headline_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLock" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:text="@string/forgot_password_desc"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <!-- Input Container -->
            <LinearLayout
                android:id="@+id/inputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

                <!-- Tab Selector -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tab_container"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_xs">

                    <TextView
                        android:id="@+id/tabEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_selector"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:paddingVertical="@dimen/spacing_md"
                        android:text="@string/email"
                        android:textColor="@color/tab_text_unselected"
                        android:textSize="@dimen/text_title_small" />

                    <TextView
                        android:id="@+id/tabPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_selector"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:paddingVertical="@dimen/spacing_md"
                        android:text="@string/phone"
                        android:textColor="@color/tab_text_unselected"
                        android:textSize="@dimen/text_title_small" />

                </LinearLayout>

                <!-- Input Hint -->
                <TextView
                    android:id="@+id/tvInputHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/forgot_password_email_hint"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_label_medium" />

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.SafeGuard.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:hint="@string/email"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_medium" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhone"
                    style="@style/Widget.SafeGuard.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:hint="@string/phone_number"
                    android:visibility="gone"
                    app:errorEnabled="true"
                    app:prefixText="+91"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/text_hint"
                    tools:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_medium" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Success Container (Hidden initially) -->
            <LinearLayout
                android:id="@+id/successContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_success"
                    android:padding="@dimen/spacing_md"
                    android:src="@drawable/ic_email"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:text="@string/check_inbox"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_headline_small" />

                <TextView
                    android:id="@+id/tvSuccessMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_lg"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_body_medium"
                    tools:text="We've sent a password reset link to email@example.com" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenEmail"
                    style="@style/Widget.SafeGuard.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:text="@string/open_email_app"
                    app:icon="@drawable/ic_home" />

            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/btnSubmit"
                app:layout_constraintTop_toBottomOf="@id/inputContainer"
                app:layout_constraintVertical_weight="1" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                style="@style/Widget.SafeGuard.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:text="@string/send_reset_link"
                app:layout_constraintBottom_toTopOf="@id/tvBackToLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btnSubmit"
                app:layout_constraintEnd_toEndOf="@id/btnSubmit"
                app:layout_constraintStart_toStartOf="@id/btnSubmit"
                app:layout_constraintTop_toTopOf="@id/btnSubmit"
                tools:visibility="gone" />

            <!-- Back to Login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/spacing_sm"
                android:text="@string/back_to_login"
                android:textColor="@color/accent_cyan"
                android:textSize="@dimen/text_title_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>