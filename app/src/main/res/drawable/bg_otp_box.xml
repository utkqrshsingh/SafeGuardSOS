<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Error State -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background" />
            <corners android:radius="@dimen/radius_md" />
            <stroke
                android:width="@dimen/border_width_medium"
                android:color="@color/status_error" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_focused" />
            <corners android:radius="@dimen/radius_md" />
            <stroke
                android:width="@dimen/border_width_medium"
                android:color="@color/accent_primary" />
        </shape>
    </item>

    <!-- Filled State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background" />
            <corners android:radius="@dimen/radius_md" />
            <stroke
                android:width="@dimen/border_width_medium"
                android:color="@color/accent_primary" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background" />
            <corners android:radius="@dimen/radius_md" />
            <stroke
                android:width="@dimen/border_width_normal"
                android:color="@color/input_border" />
        </shape>
    </item>

</selector>